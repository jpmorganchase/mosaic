{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/__tests__/**/*",
    "src/__tests__/**/*",
    "src/**/*.mjs.*",
    "**/dist/**/*"
  ]
}
