{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "target": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/__tests__/**/*",
    "src/__tests__/**/*",
    "src/**/*.mjs.*",
    "**/dist/**/*"
  ]
}
