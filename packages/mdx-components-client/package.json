    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@jpmorganchase/mosaic-components": "^0.1.0-beta.36",
    "@jpmorganchase/mosaic-site-components": "^0.1.0-beta.36",
    "@jpmorganchase/mosaic-theme": "^0.1.0-beta.36",
