{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "target": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*", "../common/src/types"],
  "exclude": ["node_modules", "src/**/__tests__/**/*", "src/__tests__/**/*", "**/dist/**/*"]
}
