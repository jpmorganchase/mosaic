{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2019",
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "declaration": true,
    "noImplicitAny": false,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@jpmorganchase/mosaic*": ["packages/*/dist"]
    },
    "types": ["jest", "node"]
  },
  "include": ["types"],
  "exclude": ["node_modules", "dangerfile.ts", "./packages/**/__tests__", "**/dist/**/*"]
}
