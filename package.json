{
  "name": "@jpmorganchase/mosaic",
  "version": "0.1.0-beta.2",
  "author": "",
  "description": "",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 16.0.0"
  },
  "bin": {
    "mosaic": "yarn workspace @jpmorganchase/mosaic-cli"
  },
  "scripts": {
    "mosaic": "node ./packages/cli/dist/index.js",
    "test": "npm-run-all --parallel test:*",
    "test:client": "jest --config ./jest.config.client.js --coverage",
    "test:server": "jest  --config ./jest.config.server.js --coverage",
    "build": "turbo run build",
    "build:snapshot": "turbo run build:snapshot --filter=@jpmorganchase/mosaic-example",
    "build:snapshot:latest": "turbo run build:snapshot:latest --filter=@jpmorganchase/mosaic-example",
    "copy:site:images": "cp -r ./assets/[!.]* ./packages/site/public/img",
    "clean": "turbo run clean clean:site",
    "clean:site": "rimraf packages/site",
    "gen": "turbo run gen:site copy:site:images gen:snapshot --filter=//",
    "gen:site": "yarn mosaic-create-site create -g mosaic -o packages/site -f",
    "gen:snapshot": "turbo run gen:snapshot --filter=@jpmorganchase/mosaic-site",
    "lint": "turbo run lint",
    "serve": "turbo run serve --filter=@jpmorganchase/mosaic-site",
    "serve:snapshot": "turbo run serve:snapshot --filter=@jpmorganchase/mosaic-site",
    "serve:example": "turbo run serve --filter=@jpmorganchase/mosaic-example-fs",
    "postinstall": "patch-package",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jpmorganchase/mosaic.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.2",
    "@swc/core": "^1.3.3",
    "@swc/jest": "^0.2.22",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^29.1.2",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "@vanilla-extract/esbuild-plugin": "^2.0.0",
    "concurrently": "^7.1.0",
    "esbuild": "^0.13.2",
    "esbuild-node-externals": "^1.0.2",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "7.31.8",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fast-glob": "^3.2.7",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.0.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.0.2",
    "patch-package": "^6.2.2",
    "prettier": "^2.7.1",
    "regenerator-runtime": "^0.13.10",
    "resize-observer-polyfill": "1.5.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@types/swagger-ui-react": "^4.11.0",
    "swagger-ui-react": "^4.15.5",
    "turbo": "latest"
  },
  "resolutions": {
    "@braintree/sanitize-url": "^6.0.0",
    "@types/react": "^16.9.34",
    "commander": "^9.4.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ]
  }
}
