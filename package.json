{
  "name": "@jpmorganchase/mosaic",
  "version": "0.1.0-beta.2",
  "author": "",
  "description": "",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0 || >=20.0.0"
  },
  "scripts": {
    "build:site": "turbo run build --filter=@jpmorganchase/mosaic-site",
    "build": "turbo run build --filter=!@jpmorganchase/mosaic-site",
    "clean": "turbo run clean",
    "deploy:site": "turbo run deploy --filter=@jpmorganchase/mosaic-site",
    "deploy": "yarn build:site",
    "dev": "turbo run dev",
    "e2e:codegen": "turbo run e2e:codegen --filter=@jpmorganchase/mosaic-site",
    "e2e:setup": "npx playwright install",
    "e2e": "turbo run e2e --filter=@jpmorganchase/mosaic-site",
    "gen:snapshot": "turbo run gen:snapshot --filter=@jpmorganchase/mosaic-site",
    "gen": "turbo run gen:site gen:snapshot --filter=//",
    "lint": "turbo run lint",
    "mosaic": "node ./packages/cli/dist/index.js",
    "prepare": "husky install",
    "prettier:ci": "prettier --check .",
    "prettier": "prettier --write .",
    "serve:snapshot:file": "turbo run serve:snapshot:file --filter=@jpmorganchase/mosaic-site",
    "serve:snapshot:s3": "turbo run serve:snapshot:s3 --filter=@jpmorganchase/mosaic-site",
    "serve": "turbo run serve --filter=@jpmorganchase/mosaic-site",
    "start": "turbo run start --filter=@jpmorganchase/mosaic-site",
    "test:client": "vitest --project=client",
    "test:server": "vitest --project=server",
    "test": "vitest --coverage",
    "docker:volume": "docker container create --name docs-copy -v docs:/docs mosaic-fs && docker cp ./docs docs-copy:/ && docker rm docs-copy",
    "docker:network": "docker network create mosaic-net"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jpmorganchase/mosaic.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vanilla-extract/esbuild-plugin": "^2.3.15",
    "@vitest/coverage-istanbul": "^3.0.0",
    "concurrently": "^7.1.0",
    "del-cli": "^4.0.1",
    "esbuild": "0.25.0",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-extended": "^2.3.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fast-glob": "^3.2.7",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^25.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resize-observer-polyfill": "1.5.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@types/swagger-ui-react": "^5.0.0",
    "swagger-client": "^3.34.1",
    "swagger-ui-react": "^5.30.0",
    "turbo": "latest"
  },
  "resolutions": {
    "@types/mdast": "^4.0.0",
    "@braintree/sanitize-url": "^6.0.0",
    "@types/react": "^18.3.12",
    "commander": "^9.4.0",
    "cookie": "^1.0.0",
    "esbuild": "0.25.0",
    "json5": "^1.0.2",
    "prismjs": "1.30.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.10.3"
}
