{
  "name": "@jpmorganchase/mosaic",
  "version": "0.1.0-beta.2",
  "author": "",
  "description": "",
  "license": "Apache-2.0",
  "private": true,
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 12.0.0"
  },
  "bin": {
    "mosaic": "yarn workspace @jpmorganchase/mosaic-cli"
  },
  "scripts": {
    "test": "jest --runInBand",
    "build": "turbo run build",
    "clean": "yarn workspace @jpmorganchase/mosaic-types clean & yarn workspace @jpmorganchase/mosaic-source-local-folder clean & yarn workspace @jpmorganchase/mosaic-source-bitbucket clean & yarn workspace @jpmorganchase/mosaic-cli clean & yarn workspace @jpmorganchase/mosaic-serialisers clean & yarn workspace @jpmorganchase/mosaic-plugins clean & yarn workspace @jpmorganchase/mosaic-core clean",
    "example-nextjs": "yarn build && concurrently --kill-others 'yarn workspace @jpmorganchase/mosaic-example-nextjs-ssr dev' 'yarn mosaic serve -c ./packages/example-mosaic-fs/dist/pd.config.js' -p 8080",
    "start": "./node_modules/.bin/mosaic serve -c ./packages/example-mosaic-fs/dist/pd.config.js -p 8080",
    "lint": "yarn eslint \"packages/core/src/**/*.{ts,tsx}\" --ignore-pattern \"**/__tests__/**\"",
    "prettier": "prettier --write . --ignore-path .gitignore",
    "prettier:ci": "prettier --check . --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jpmorganchase/mosaic.git"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-proposal-private-methods": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "7.13.8",
    "@babel/preset-typescript": "^7.10.4",
    "@changesets/cli": "^2.24.2",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "babel-jest": "^29.1.2",
    "concurrently": "^7.1.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "7.31.8",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.8.3",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "turbo": "latest"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ]
  }
}
