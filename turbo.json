{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:snapshot": {
      "cache": false
    },
    "build:snapshot:latest": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "deploy": {
      "cache": false
    },
    "e2e": {
      "cache": false
    },
    "e2e:codegen": {
      "cache": false
    },
    "gen:snapshot": {
      "outputs": ["./packages/site/public/snapshots/latest/**"]
    },
    "lint": {},
    "serve": {},
    "serve:snapshot:file": {},
    "serve:snapshot:s3": {},
    "test": {},
    "types": {}
  },
  "globalDependencies": ["tsconfig.json"]
}
